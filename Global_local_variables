x="global"               #declared outside a function and can be accesed anywhere

def my_function():
    x="local"            #declared inside fun() only be accessed within that fun()
    print("inside function:", x)

my_function ()           
print ("outside function:", x)

#to modify a global variable inside a fun(),use the global keyword

x=10  #global
def modify_global():
    global x
    x=20
modify_global()
print(x)
